<?xml version="1.0" encoding="UTF-8"?>
<!--
  Custom Synth Look and Feel definition file.
  This file defines a set of component styles for a Java Swing Synth look-and-feel
  designed with a Gruvbox-inspired color scheme.

  For more details on Synth file format and look-and-feel, see:
    https://docs.oracle.com/javase/8/docs/api/javax/swing/plaf/synth/doc-files/synthFileFormat.html
    https://docs.oracle.com/javase/tutorial/uiswing/lookandfeel/synth.html
-->
<synth>

  <!-- Global Background Style: Inherited by any region that is not otherwise bound -->
  <style id="backStyle">
    <opaque value="FALSE"/>
    <font name="Arial" size="20"/>
    <state>
      <color value="#282828" type="BACKGROUND"/>
      <color value="WHITE" type="FOREGROUND"/>
    </state>
  </style>
  <!-- Bind backStyle to every region by default -->
  <bind style="backStyle" type="region" key=".*"/>

  <!-- Label Style -->
  <style id="labelStyle">
    <font name="Arial" size="20"/>
    <opaque value="FALSE"/>
    <state>
      <color value="#3C3836" type="BACKGROUND"/>
      <color value="#EBDBB2" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="labelStyle" type="region" key="Label"/>

  <!-- Button Style -->
  <style id="buttonStyle">
    <opaque value="TRUE"/>
    <property key="Button.textShiftOffset" type="integer" value="1"/>
    <insets top="5" left="5" right="5" bottom="5"/>
    <state>
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
    <state value="PRESSED">
      <color value="#928374" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
    <state value="SELECTED">
      <color type="BACKGROUND" value="#b8bb26"/>
      <color type="TEXT_FOREGROUND" value="#282828"/>
    </state>
  </style>
  <bind style="buttonStyle" type="region" key="Button"/>

  <!-- JFileChooser Styles -->
  <style id="fileChooserStyle">
    <opaque value="FALSE"/>
    <state>
      <color value="#282800" type="BACKGROUND"/>
      <color value="#EBDBB2" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="fileChooserStyle" type="region" key="FileChooser"/>

  <style id="fileChooserButtonStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
    <state value="PRESSED">
      <color value="#928374" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
  </style>
  <bind style="fileChooserButtonStyle" type="region" key="FileChooser.button"/>

  <style id="fileChooserLabelStyle">
    <font name="Arial" size="20"/>
    <opaque value="FALSE"/>
    <state>
      <color value="#3C3836" type="BACKGROUND"/>
      <color value="#EBDBB2" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="fileChooserLabelStyle" type="region" key="FileChooser.label"/>

  <!-- JInternalFrame Styles -->
  <style id="internalFrameStyle">
    <opaque value="TRUE"/>
    <insets top="6" left="6" right="6" bottom="6"/>

    <state value="ENABLED">
      <color value="#504945" type="BACKGROUND"/> <color value="#EBDBB2" type="TEXT_FOREGROUND"/>
    </state>

    <state value="SELECTED">
      <color value="#a89984" type="BACKGROUND"/> <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
  </style>
  <bind style="internalFrameStyle" type="region" key="InternalFrame"/>

  <!-- InternalFrame Title Style -->
  <style id="internalFrameTitleStyle">
    <font name="Arial" size="20"/>
    <opaque value="TRUE"/>
    <state>
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="internalFrameTitleStyle" type="region" key="InternalFrame.titlePane"/>

  <!-- InternalFrame Close Button -->
  <style id="internalFrameCloseButtonStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
    <state value="PRESSED">
      <color value="#928374" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
  </style>
  <bind style="internalFrameCloseButtonStyle" type="region" key="InternalFrame.closeButton"/>

  <!-- InternalFrame Maximize Button -->
  <style id="internalFrameMaximizeButtonStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
    <state value="PRESSED">
      <color value="#928374" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
  </style>
  <bind style="internalFrameMaximizeButtonStyle" type="region" key="InternalFrame.maximizeButton"/>

  <!-- InternalFrame Minimize Button -->
  <style id="internalFrameMinimizeButtonStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
    <state value="PRESSED">
      <color value="#928374" type="BACKGROUND"/>
      <color value="#FBF1C1" type="TEXT_FOREGROUND"/>
    </state>
  </style>
  <bind style="internalFrameMinimizeButtonStyle" type="region" key="InternalFrame.minimizeButton"/>

  <!-- JMenuBar Style -->
  <style id="menuBarStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#3C3836" type="BACKGROUND"/>
      <color value="#EBDBB2" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="menuBarStyle" type="region" key="MenuBar"/>

  <!-- JMenu Style -->
  <style id="menuStyle">
    <opaque value="FALSE"/>
    <insets top="5" left="10" right="10" bottom="5"/>
    <state>
      <color value="#3C3836" type="BACKGROUND"/>
      <color value="#EBDBB2" type="FOREGROUND"/>
    </state>
    <state value="MOUSE_OVER">
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="menuStyle" type="region" key="Menu"/>

  <!-- JMenuItem Style -->
  <style id="menuItemStyle">
    <opaque value="TRUE"/>
    <insets top="3" left="2" right="2" bottom="3"/>
    <state>
      <color value="#3C3836" type="BACKGROUND"/>
      <color value="#EBDBB2" type="FOREGROUND"/>
    </state>
    <state value="MOUSE_OVER">
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="FOREGROUND"/>
    </state>
    <state value="SELECTED">
      <color value="#928374" type="BACKGROUND"/>
      <color value="#FBF1C1" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="menuItemStyle" type="region" key="MenuItem"/>

  <!-- JScrollBar Style -->
  <style id="scrollBarStyle">
    <opaque value="true"/>
    <state>
      <color value="#a89984" type="BACKGROUND"/>
    </state>
  </style>
  <bind style="scrollBarStyle" type="region" key="ScrollBar"/>

  <style id="scrollBarTrackStyle">
    <opaque value="true"/>
    <state>
      <color value="#504945" type="BACKGROUND"/>
    </state>
  </style>
  <bind style="scrollBarTrackStyle" type="region" key="ScrollBarTrack"/>

  <style id="scrollBarThumbStyle">
    <opaque value="true"/>
    <state>
      <color value="#a89984" type="BACKGROUND"/>
      <color value="#a89984" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="scrollBarThumbStyle" type="region" key="ScrollBarThumb"/>

  <!-- JRadioButton Style -->
  <style id="radioButtonStyle">
    <opaque value="TRUE"/>
    <font name="Arial" size="20"/>
    <state>
      <color value="#3C3836" type="BACKGROUND"/>
      <color value="#EBDBB2" type="FOREGROUND"/>
    </state>
    <state value="PRESSED">
      <color value="#928374" type="BACKGROUND"/>
      <color value="#FBF1C1" type="FOREGROUND"/>
    </state>
    <state value="MOUSE_OVER">
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="FOREGROUND"/>
    </state>
    <state value="SELECTED">
      <color value="#7c6f64" type="BACKGROUND"/>
      <color value="#FBF1C1" type="FOREGROUND"/>
    </state>
  </style>
  <bind style="radioButtonStyle" type="region" key="RadioButton"/>
  <bind style="radioButtonStyle" type="region" key="RadioButton.icon"/>

  <!-- JRadioButton (selected) Icon Style -->
  <style id="radioButtonSelectedIconStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#928374" type="BACKGROUND"/>
    </state>
  </style>
  <bind style="radioButtonSelectedIconStyle" type="region" key="RadioButton.icon.selected"/>

  <!-- JRadioButton (not selected) Icon Style -->
  <style id="radioButtonUnselectedIconStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#EBDBB2" type="BACKGROUND"/>
    </state>
  </style>
  <bind style="radioButtonUnselectedIconStyle" type="region" key="RadioButton.icon.unselected"/>
  <style id="sliderStyle">
    <opaque value="FALSE"/>
    <property key="Slider.paintValue" type="boolean" value="false"/>
    <state>
      <color value="#3C3836" type="BACKGROUND"/> <color value="#EBDBB2" type="FOREGROUND"/> </state>
  </style>
  <bind style="sliderStyle" type="region" key="Slider"/>

  <style id="sliderTrackStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#504945" type="BACKGROUND"/>
    </state>
  </style>
  <bind style="sliderTrackStyle" type="region" key="SliderTrack"/>

  <style id="sliderThumbStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#a89984" type="BACKGROUND"/>
      <color value="#a89984" type="FOREGROUND"/> </state>
    </style>
  <bind style="sliderThumbStyle" type="region" key="SliderThumb"/>

  <style id="listStyle">
    <font name="SansSerif" size="12"/>
    <opaque value="true"/>
    <state>
      <color type="BACKGROUND" value="#282828"/>
      <color type="TEXT_FOREGROUND" value="#fbf1c7"/>
      <color type="TEXT_BACKGROUND" value="#282828"/>
    </state>
  </style>
  <bind style="listStyle" type="region" key="List"/>

</synth>
